<section class="vh-100">
  <div class="container-lg">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Add Item</p>
                <form method="POST" action="/item/add" class="mx-1 mx-md-4" enctype="multipart/form-data">
                  <!-- Item Namw -->
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="form3Example1c">Item Name</label>
                      <input name="itemName" type="text" required id="form3Example1c" class="form-control" required>
                    </div>
                  </div>
                  <!-- Item description -->
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="form3Example1c">Item description</label>
                      <input name="description" type="text" required id="form3Example1c" class="form-control" required>
                    </div>
                  </div>
                  <!-- Price Rate -->
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="form3Example3c">Price Rate</label>
                      <input name="priceRate" type="text" required id="form3Example3c" class="form-control" required>
                    </div>
                  </div>
                  <!-- Deposite -->
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="form3Example3c">Deposite</label>
                      <input name="deposit" type="text" required id="form3Example3c" class="form-control" required>
                    </div>
                  </div>
                  <!-- Item condition -->
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label">Item condition</label>
                      <select name="condition" id="condition" class="addItem" required>
                        <option value="new">new</option>
                        <option value="good">good</option>
                        <option value="old">old</option>
                      </select>
                    </div>
                  </div>
                  <!-- Item type -->
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label">Item Type</label>
                      <select name="type" id="type" class="addItem" required>
                        <option value="home appliances">home appliances</option>
                        <option value="electronics">electronics</option>
                        <option value="other">other</option>
                      </select>
                    </div>
                  </div>
                  <!-- upload Image -->
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label">Upload image</label>



                      <input class="form-control custom-file-input" type="file" name="itemImage">



                      <input type="submit" class="btn btn-primary btn-lg d-block mt-3" value="Submit">
                    </div>

                    <div class="d-flex justify-content-between mx-4 mb-3 mb-lg-4 reg">
                    </div>


                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
  </div>
</section>