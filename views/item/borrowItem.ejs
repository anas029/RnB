<h1>Borrow Item<%= item.itemName %>
</h1>
<p>User <%= locals.user525.username %>
</p>
<!-- new layout ----------------------------------------------------------- -->

<section>
  <div class="container py-5">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 itemC">
      <div class="col-lg-5">
        <div class="card mb-5">
          <div class="card shadow-sm">
            <img src="/images/items/<%= item.itemImage %>" alt="item picture" class="img-fluid" width="100%"
              height="600" role="img" aria-label="<%= item.itemName %>" preserveAspectRatio="xMidYMid slice"
              focusable="false">
          </div>

        </div>
      </div>
      <div class="col-lg-6">
        <div class="card mb-4">
          <div class="card-body ">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Item Name</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">
                  <%= item.itemName %>
                </p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Item Description</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">
                  <%= item.description %>
                </p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Item Conditon</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">
                  <%= item.condition %>
                </p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Price per day</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">
                  BD<%= item.priceRate %>
                </p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Deposite Amount</p>
              </div>

              <div class="col-sm-9">
                <p class="text-muted mb-0">
                  BD<%= item.deposit %>
                </p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Item Owner</p>
              </div>

              <div class="col-sm-3">
                <p class="text-muted mb-0"><a href="/user/detail?id=<%= item.owner._id %>">
                    <%= item.owner.username %>
                  </a></p>

              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Reviews</p>
              </div>

              <div class="col-sm-9">
                <% if (item.numOfReview) { %>
                  <% let point=0%>
                    <% for (const key in item.review) { %>
                      <%point+= item.review[key].score %>
                        <% } %>
                          <%= `rating: ${Math.round((point/ item.review.length)*(100/5)*10)/10}%, number of reviews:
                            ${item.review.length}` %>
                            <% } else { %>
                              no review yet
                              <% } %>
              </div>
              <hr>
              <!-- this is to show borrow details if user is owner -->

              <% if (locals.user525&&!item.isAvailable&&item.owner.id.toString()===locals.user525._id.toString()) { %>
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Borrower:</p>
                  </div>
                  <div class="col-sm-3 ">
                    <p class="col-sm-9 "><a href="/user/detail?id=<%= item.borrower.id %>">
                        <%= item.borrower.username %>
                      </a></p>

                  </div>
                  borrowed date: <%= item.borrowDate.toLocaleDateString('en-US', { year: 'numeric' , month: 'long' }) %>
                    <% } else if(locals.user525&&item.isAvailable&&locals.user525.credit<item.deposit) { %>
                      <!-- this is to show borrow if it is available and user not owner -->
                      <form action="/item/borrow?id=<%= item._id %>" method="post">
                        <button type="submit" disabled>borrow </button>
                        You have insufficient balance, <a href="/payment">please make payment first</a>
                        <% } else if(locals.user525&&item.isAvailable&&locals.user525.credit>=item.deposit) { %>
                          <form action="/item/borrow?id=<%= item._id %>" method="post">
                            <button class="btn btn-outline-primary ms-9" type="submit">Confirm</button>
                          </form>
                          <% } else if(locals.user525&&!item.isAvailable) { %>
                            <p>item is not available</p>
                            <% } else if(!locals.user525) { %>
                              <a href="/auth/signin">Rent it</a>
                              <% } %>

                </div>



            </div>