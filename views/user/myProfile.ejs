              <img src="/images/items/<%= user.borrowedItem[key].itemImage %>" alt="item picture"
                class="bd-placeholder-img card-img-top cover-img" width="100%" height="225" role="img"
                aria-label="<%= user.borrowedItem[key].itemName %>" preserveAspectRatio="xMidYMid slice"
                focusable="false">
              <div class="card-body">
                <h3 class="cap">
                  <%= user.borrowedItem[key].itemName %>
                </h3>
                <p class="card-text">
                  <%= user.borrowedItem[key].description %>
                </p>
                <div class="btn-group mb-4">

                  <a href="/item/details?id=<%= user.borrowedItem[key]._id %>"
                    class="btn btn-outline-primary ms-1">View</a>

                  <a href="/item/return?id=<%= user.borrowedItem[key]._id %>"
                    class="btn btn-outline-primary ms-1">Return</a>


                </div>
              </div>
            </div>
          </div>
          <% } %>
            <% } else { %>
              <p>no item rented yet</p>
              <% } %>
    </div>
  </div>
</div>